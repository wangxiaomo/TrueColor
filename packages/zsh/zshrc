export ZSH=$HOME/.oh-my-zsh
plugins=(git svn python pyenv gem rbenv bower tmux brew coffee command-not-found common-aliases cp)
ZSH_THEME="bira"
# fix alias plugin
alias ls='ls --color'
# zsh completions
fpath=(~/.zsh-completions $fpath)
source $ZSH/oh-my-zsh.sh

bindkey -e
PROMPT="%{$fg[magenta]%}(${USER})%{$reset_color%}${current_dir} %{$fg[yellow]%}@dev%{$reset_color%} ${git_branch}%B%%%b "
unsetopt correct_all

export VISUAL='vim'
export EDITOR='vim'
export LANG='en_US.UTF-8'
export LC_CTYPE='en_US.UTF-8'

# pyenv setup
export PYENV_ROOT="${HOME}/.pyenv"
if [ -d "${PYENV_ROOT}" ]; then
    export PATH="${PYENV_ROOT}/bin:${PATH}"
    eval "$(pyenv init -)"
    pyenv virtualenvwrapper
fi

# rbenv setup
export RBENV_ROOT="${HOME}/.rbenv"
if [ -d "${RBENV_ROOT}" ]; then
    export PATH="${RBENV_ROOT}/shims:${RBENV_ROOT}/bin:${PATH}"
    eval "$(rbenv init -)"
fi

. ~/.zsh_vhosts
. ~/.zsh_alias
