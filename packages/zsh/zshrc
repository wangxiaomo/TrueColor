ZSH=$HOME/.oh-my-zsh
plugins=(osx brew git github svn pip python django coffee perl cpanm node npm redis-cli tmux)
source $ZSH/oh-my-zsh.sh
source ~/.zsh_theme

# auto-fu zcompiled
# A=/path/to/auto-fu.zsh; (zsh -c "source $A ; auto-fu-zcompile $A ~/.zsh")
source ~/.auto-fu.zsh/auto-fu.zsh; auto-fu-install
zle-line-init () {auto-fu-init;}; zle -N zle-line-init
zstyle ':completion:*' completer _oldlist _complete
zle -N zle-keymap-select auto-fu-zle-keymap-select

alias ls='ls -GF'
alias tmux='TERM=screen-256color-bce tmux'

alias dev2='ssh wangxiaomo@doubandev2'
alias fili='ssh wangxiaomo@fili'
alias balin='ssh wangxiaomo@balin'
alias theoden='ssh wangxiaomo@theoden'

export VISUAL='vim'
export EDITOR='vim'

bindkey -e
unsetopt correct_all

export VIRTUAL_ENV_DISABLE_PROMPT="nope"

# color the man book
export PAGER='`which less` -s'
export BROWSER='$PAGER'
export LESS_TERMCAP_mb=$'\E[01;36m'
export LESS_TERMCAP_md=$'\E[01;36m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_so=$'\E[01;44;33m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[01;33m'

git config --global user.name "xiaomo"
git config --global user.email "go.xiaomo@gmail.com"
git config --global alias.lg "log --color --graph --pretty=format:'%Cred%h%Creset - %C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --"
git config --global alias.st "status -s"
git config --global alias.mg "merge --no-ff"
git config --global alias.co "checkout"
git config --global alias.br "branch"
git config --global alias.reflog "reflog show master"
