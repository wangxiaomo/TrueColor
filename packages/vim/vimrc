source $VIMRUNTIME/ftplugin/man.vim

call pathogen#infect()
call pathogen#helptags()

let mapleader=','
syntax on

set mouse=a
set ruler
set number
set showmode
set showcmd
set showmatch

set hlsearch
set ignorecase
set smartcase
set incsearch

set autowrite
set hidden

set sw=4
set ts=4
set t_Co=256
set laststatus=2
set expandtab
set fencs=utf-8,cp936
set backspace=indent,eol,start

colorscheme molokai-transparent

if has("autocmd")
  au BufReadPost * if line("'\"")>1 && line("'\"")<=line("$") | exe "normal! g'\"" | endif
endif

map  <leader>e :NERDTreeTabsToggle<CR>
map  <leader>t :Tagbar<CR>
map  <leader>f :MBEFocus<CR>
map  <C-w>n    :tabnew<CR>
map  <C-S-Right> :tabnext<CR>
map  <C-S-Left>  :tabprevious<CR>
vnoremap < <gv
vnoremap > >gv

let NERDTreeIgnore=['\.vim$', '\~$', '\.pyc$', '\.swp$']
let NERDTreeSortOrder=['^__\.py', '\/$', '*', '\.swp$', '\~$']
let NERDTreeShowBookmarks=1
let g:nerdtree_tabs_synchronize_view=1
let g:ctrlp_custom_ignore={
\ 'dir': '\v[\/]\.(git|hg|svn)$',
\ 'file': '\v\.(so|swp)$',
\}
let g:ctrlp_use_caching=1
let g:neocomplcache_enable_at_startup=1
let g:neocomplcache_enable_smart_case=1
let g:neocomplcache_min_syntax_length=2
let g:neocomplcache_enable_underbar_completion=1
let g:miniBufExplorerAutoStart = 0

autocmd FileType php,python,perl,markdown set sw=4 ts=4 expandtab
autocmd FileType javascript,html,css set sw=2 ts=2 expandtab
autocmd FileType jade,smarty set sw=2 ts=2 expandtab
autocmd FileType vim set sw=2 ts=2 expandtab
au BufNewFile,BufReadPost *.coffee setl sw=2 ts=2 expandtab

command PlzW w !sudo tee %

filetype plugin on
set completeopt-=preview

set cursorline
highlight CursorLine cterm=underline
